<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page8">
    <ContentPage.Content>
        
        <StackLayout>
            
            <Label Text="Start"
                    HorizontalOptions="Center"
                   VerticalTextAlignment="End"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="Large"></Label>
          
            <Image Source="BlackLine.png">
               
            </Image>
           
           
           <Picker x:Name="SelectBirdPicker" Title="Select Bird*">
                <Picker.Items>
                    <x:String>Sasso</x:String>
                    <x:String>T-rainbow</x:String>
                    <x:String>Sussex</x:String>
                </Picker.Items>
            </Picker>

            <Picker x:Name="QuantityPicker" Title="Quantity">
                <Picker.Items>
                    <x:String>1</x:String>
                    <x:String>2</x:String>
                    <x:String>3</x:String>
                    <x:String>4</x:String>
                </Picker.Items>
                
            </Picker>
            
            

            <Grid>
                <Button Text="Next"
                        TextColor="White"
                        BackgroundColor="Black"
                        Margin="0,45,0,0"></Button>
            </Grid>
           

        </StackLayout>
        


    </ContentPage.Content>
   
</ContentPage>